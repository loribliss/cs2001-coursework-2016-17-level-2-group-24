<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_food_cupboard_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cs15fmk.foodmanagement.ViewFoodCupboardItem"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardName"
            android:text="Name:"
            android:textColor="@color/colourBlack"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardNameInput"
            tools:text="name"
            android:textColor="@color/colourBlack"
            android:layout_toRightOf="@id/foodCupboardName"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardDayBought"
            android:text="Day Bought: "
            android:textColor="@color/colourBlack"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardDayBoughtInput"
            tools:text="daybought"
            android:textColor="@color/colourBlack"
            android:layout_toRightOf="@id/foodCupboardDayBought"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardDayExpiry"
            android:text="Day Expriy: "
            android:textColor="@color/colourBlack"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardDayExpiryInput"
            tools:text="dayexpiry "
            android:textColor="@color/colourBlack"
            android:layout_toRightOf="@id/foodCupboardDayExpiry"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardDaysRemaining"
            android:text="Days Remaining: "
            android:textColor="@color/colourBlack"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardDaysRemainingInput"
            tools:text="daysremaining "
            android:textColor="@color/colourBlack"
            android:layout_toRightOf="@id/foodCupboardDaysRemaining" />
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle_red"
            android:id="@+id/daysRemainingCircleView"
            android:layout_toRightOf="@id/foodCupboardDaysRemainingInput"
            android:translationX="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodCupboardQuantityBought"
        android:text="Quantity Bought: "
        android:textColor="@color/colourBlack"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardQuantityBoughtInput"
            tools:text="12 "
            android:textColor="@color/colourBlack"
            android:layout_toRightOf="@id/foodCupboardQuantityBought"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardQuantityRemaining"
            android:layout_toRightOf="@id/foodCupboardQuantityBoughtInput"
            android:text="Quantity Remaining: "
            android:textColor="@color/colourBlack"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardQuantityRemainingInput"
            tools:text="12 "
            android:textColor="@color/colourBlack"
            android:layout_toRightOf="@id/foodCupboardQuantityRemaining"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardAmountBought"
            android:text="Amount Bought: "
            android:textColor="@color/colourBlack"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardAmountBoughtInput"
            tools:text="500 "
            android:textColor="@color/colourBlack"
            android:layout_toRightOf="@id/foodCupboardAmountBought"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardAmountRemaining"
            android:layout_toRightOf="@id/foodCupboardAmountBoughtInput"
            android:text="Amount Remaining: "
            android:textColor="@color/colourBlack"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodCupboardAmountRemainingInput"
            tools:text="500 "
            android:textColor="@color/colourBlack"
            android:layout_toRightOf="@id/foodCupboardAmountRemaining"/>

    </RelativeLayout>

    <ProgressBar
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:id="@+id/progressBarViewFoodCupboardItem"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:progress="70"/>
    <Button
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="edit"
        android:id="@+id/edit_cupboard_item"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="delete"
        android:id="@+id/delete_cupboard_item"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="finish"
        android:id="@+id/finish_viewing_cupboard_item"
        />
</LinearLayout>

