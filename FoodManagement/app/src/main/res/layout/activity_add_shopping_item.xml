<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_shopping_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cs15fmk.foodmanagement.AddShoppingItem"
    android:orientation="vertical">

    <EditText
        android:id="@+id/newFCItem_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textMultiLine"/>
    <EditText
        android:id="@+id/newFCItem_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity"
        android:inputType="number"/>
    <TextView
        android:id="@+id/add_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Priority:"
        android:layout_marginLeft="8dp"
        android:textSize="17sp"
        android:textColor="@color/colourBlack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/low_priority_circle_add"
            android:src="@drawable/circle_green"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/medium_priority_circle_add"
            android:src="@drawable/circle_yellow"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/high_priority_circle_add"
            android:src="@drawable/circle_red"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LOW"
            android:id="@+id/low_priority_text_add"
            android:translationX="43dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MEDIUM"
            android:id="@+id/medium_priority_text_add"
            android:translationX="44dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HIGH"
            android:translationX="37dp"
            android:id="@+id/high_priority_text_add"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/completeAddShoppingListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new item!"/>
</LinearLayout>
