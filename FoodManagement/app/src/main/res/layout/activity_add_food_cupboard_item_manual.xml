<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_food_cupboard_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cs15fmk.foodmanagement.AddFoodCupboardItemManual"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:id="@+id/newFCName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textMultiLine"/>
    <EditText
        android:id="@+id/newFCDayBought"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Day Bought"
        android:focusable="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/newFCDayExpiry"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:hint="Day Expiry"
            android:inputType="date"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/calendar"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageViewCalendarNew"/>
    </LinearLayout>

    <EditText
        android:id="@+id/newFCDaysRemaining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="Days Remaining"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/newFCQuantityOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"/>
        <Button
            android:id="@+id/newFCAmountOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:layout_toRightOf="@id/newFCQuantityOption"/>
        <Button
            android:id="@+id/newFCBothQuantityAndAmountOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity / Amount"
            android:layout_toRightOf="@id/newFCAmountOption"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newFCHintBox"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/newFCQuantityBought"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity Bought"
        android:inputType="number"/>
    <EditText
        android:id="@+id/newFCAmountBought"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount Bought"
        android:inputType="number"/>

    <Button
        android:id="@+id/completeNewFCManual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new item!"/>

</LinearLayout>
